{
  "name": "@openutility/ngx-blockly",
  "version": "17.0.0",
  "description": "An angular wrapper for google's blockly.",
  "repository": {
    "type": "git",
    "url": "https://github.com/openUtility/ngx-blockly.git"
  },
  "bugs": {
    "url": "https://github.com/openUtility/ngx-blockly/issues"
  },
  "keywords": [
    "angular",
    "typescript",
    "blockly"
  ],
  "license": "Apache-2.0",
  "peerDependencies": {
    "@angular/common": "17.X - 19.X",
    "@angular/core": "17.X - 19.X",
    "uuid": "*"
  },
  "scripts": {
    "build_lib": "ng build NgxBlocklyNew --configuration=production",
    "copy_script": "cp -r src/scripts ../../dist/ngx-blockly",
    "link": "npm run build_lib && cd ../../dist/ngx-blockly && npm link",
    "publish_lib": "cd ../../dist/ngx-blockly && npm publish",
    "publish": "npm run build_lib && npm run publish_lib"
  }
}
